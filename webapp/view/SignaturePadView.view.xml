<mvc:View
    controllerName="projectsignaturepad.signaturepadproject.controller.SignaturePadView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.codeeditor"
    xmlns:control="projectsignaturepad.signaturepadproject.control"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <m:HBox id="hBoxSignaturePad">
                <m:FlexBox
                    width="100%"
                    id="generalFeaturesFlexBox"
                    alignItems="Center"
                    justifyContent="Center"
                >
                    <l:VerticalLayout
                        id="verticalLayout"
                        class="sapUiContentPadding"
                        width="100%"
                    >
                        <control:SignaturePad id="mySignaturePad" />
                        <l:HorizontalLayout id="horizontalLayout1">
                            <m:Button
                                id="undoSignaturePad"
                                text="Undo"
                                press="onUndo"
                            />
                            <m:Button
                                id="redoSignaturePad"
                                text="Redo"
                                press="onRedo"
                            />

                            <m:Button
                                id="clearSignaturePad"
                                text="Clear"
                                press="onClear"
                            />
                        </l:HorizontalLayout>

                        <l:HorizontalLayout id="horizontalLayout3">
                            <m:Button
                                id="popoverBackgroundColorPickerSignaturePad"
                                text="Background Color"
                                press="onPopoverColorPickerSignaturePad"
                            />
                            <m:Button
                                id="popoverColorPickerSignaturePad"
                                text="Color"
                                press="onPopoverColorPickerSignaturePad"
                            />
                        </l:HorizontalLayout>
                        <l:HorizontalLayout id="horizontalLayout4">
                            <m:Button
                                id="savePNGSignaturePad"
                                text="Save PNG"
                                press="onSavePNG"
                            />
                            <m:Button
                                id="saveJPGSignaturePad"
                                text="Save JPG"
                                press="onSaveJPG"
                            />
                            <m:Button
                                id="saveSVGSignaturePad"
                                text="Save SVG"
                                press="onSaveSVG"
                            />
                        </l:HorizontalLayout>
                        <m:Text
                            id="textPenWidthSignaturePad"
                            text="Tickness"
                        />
                        <m:Slider
                            id="penWidthSignaturePad"
                            width="100%"
                            step="0.1"
                            liveChange="onLivePenWidthChange"
                            showAdvancedTooltip="true"
                            showHandleTooltip="false"
                            inputsAsTooltips="true"
                            class="sapUiMediumMarginBottom"
                        />
                        <m:Text
                            id="textDotSizeSignaturePad"
                            text="Dot Size"
                        />
                        <m:Slider
                            id="dotSizeSignaturePad"
                            width="100%"
                            max="100"
                            step="1"
                            liveChange="onLiveDotSizeChange"
                            showAdvancedTooltip="true"
                            showHandleTooltip="false"
                            inputsAsTooltips="true"
                            class="sapUiMediumMarginBottom"
                        />
                    </l:VerticalLayout>
                </m:FlexBox>
                <m:FlexBox
                    id="uploadFileFeaturesFlexBox"
                    width="100%"
                    alignItems="Start"
                    justifyContent="Center"
                >
                    <l:HorizontalLayout id="horizontalLayoutFileToBlob">
                        <l:VerticalLayout
                            id="verticalHorizontalLayoutFileToBlob"
                        >
                            <u:FileUploader
                                id="uploadFileSignaturePad"
                                name="myFileUpload"
                                uploadUrl=""
                                placeholder="File to Blob"
                                tooltip="Upload your file to the local server"
                                uploadOnChange="true"
                                change="onFileUploaderChange"
                                uploadComplete="onUploadCompleteFileToBlob"
                            />
                            <m:Image
                                id="imageBlobToFile"
                                width="100%"
                                height="100%"
                            />
                        </l:VerticalLayout>
                    </l:HorizontalLayout>
                </m:FlexBox>
                <m:FlexBox
                    id="uploadBlobFeaturesFlexBox"
                    width="100%"
                    alignItems="Start"
                    justifyContent="Center"
                >
                    <l:HorizontalLayout id="horizontalLayoutBlobToFile">
                        <l:VerticalLayout
                            id="verticalHorizontalLayoutBlobToFile"
                        >
                            <u:FileUploader
                                id="uploadBlobSignaturePad"
                                name="myFileUpload"
                                placeholder="Blob to File"
                                uploadUrl="upload/"
                                tooltip="Upload your file to the local server"
                                uploadComplete="onUploadCompleteBlobToFile"
                            />
                            <c:CodeEditor
                                id="codeFileToBlob"
                                width="100%"
                                height="100%"
                                maxLines="20"
                            />
                        </l:VerticalLayout>
                    </l:HorizontalLayout>
                </m:FlexBox>
            </m:HBox>
        </content>
    </Page>
</mvc:View>
